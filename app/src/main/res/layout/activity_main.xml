<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="3dp"
    android:scrollbarThumbVertical="@drawable/scrollview"
    android:scrollbarTrackVertical="@drawable/scrollview2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="56dp"
            android:layout_height="83dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.16"
            android:src="@drawable/ts" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Form Pendaftaran Ekskul"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SMK TELKOM MALANG"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:text="Nama" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.16" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:text="Kelas" />

        <RadioGroup
            android:id="@+id/RadioGroupKelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.13">

            <RadioButton
                android:id="@+id/radioButtonX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="X" />

            <RadioButton
                android:id="@+id/radioButtonXI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="XI" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:text="Jurusan" />

        <Spinner
            android:id="@+id/spinnerjurusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:entries="@array/jurusan"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:text="Pilih Ekskul" />

        <CheckBox
            android:id="@+id/checkBoxPadus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:checked="false"
            android:text="Paduan Suara" />

        <CheckBox
            android:id="@+id/checkBoxFutsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:checked="false"
            android:text="Futsal" />

        <CheckBox
            android:id="@+id/checkBoxVoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:checked="false"
            android:text="Voli" />

        <CheckBox
            android:id="@+id/checkBoxBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:checked="false"
            android:text="Basket" />

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:text="OK" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            tools:text="New Text" />

        <TextView
            android:id="@+id/textViewJurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            tools:text="New Text" />

        <TextView
            android:id="@+id/textViewEkskul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            tools:text="New Text" />

    </LinearLayout>
</ScrollView>